<article class="post">
  <div class="title">
    <h2>{{title}}</h2>
    <span>{{post_url}}</span>
  </div>
  <div class="meta">
        {{vote_count}} point(s) by {{user.username}} on
        {{format_date created_at}}
        |
        <p>{{post_content}}</p>
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
</article>